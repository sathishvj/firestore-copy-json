{
  "name": "Firestore Copy JSON",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Copy Firestore document to JSON.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "permissions": ["scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://console.firebase.google.com/*",
        "*://localhost/*",
        "*://127.0.0.1/*"
      ],
      "js": ["content.js"]
    }
  ]
}
